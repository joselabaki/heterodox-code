
 <% provide(:title, t("title.projects")) %>
 
<div class="m-all-projects">
  <% @projects.each do |project| %>
    <div class="p-index">
      <div class ="p-title <%= project.title.parameterize %>" > <%= project.title %></div><hr>
        <div class="p-toggle <%= project.id %>">
        <div class="abstract-container hidden ">
        <div class="stripes">
          <div class="text-inside"><div class="m-p-text "><p><%= raw project.abstract %></p></div></div>
          <div class="p-button "><%= link_to t("read-lire"), project_path(project) %></div>
          </div>
        </div>
        </div>
    </div>

      <% if current_user && current_user.admin? %>
      <%= link_to 'Edit', edit_project_path(project) %>
      <%= link_to 'Destroy', project_path(project),method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'New project', new_project_path %>
      <% end %>
  <% end %>
</div>

<script>

<% @projects.each do |project| %>

$(".<%= project.title.parameterize %>").click(function(){
$(".<%= project.id %>").children().toggleClass('hidden')
});

<%end%>

</script>
