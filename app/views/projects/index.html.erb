
 
 
  <% @projects.each do |project| %>
    <div class="p-index">
      <div class ="p-title"><%= project.title %><hr></div>
      <div class="p-text"><%= project.text %></div>
      <div class="p-button"><%= link_to 'Read article', project_path(project) %></div>
    </div>
      <% if current_user && current_user.admin? %>
      <%= link_to 'Edit', edit_project_path(project) %>
      <%= link_to 'Destroy', project_path(project),method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'New project', new_project_path %>
      <% end %>
  <% end %>

