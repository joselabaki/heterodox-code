<!DOCTYPE html>
<html>
  <head>
  <title>Heterodox | <%= yield(:title) %> </title>
  <meta name="google-site-verification" content="zvyeg6MZg-07VO-onmK7sS9uHRMhDgSB3yuCFh6P3b0" />
  <meta name="description" content="Here is a precise description of my site" />
  <meta name="robots" content="index, follow" />

  <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <link rel="preload" href="preload.css.scss" as="style">

    </head>

  <body>
  <div class="m-main-container">

  <div class="m-navigation">

        <div class="m-logo">


        <%= link_to projects_path do %>
        <%= inline_svg "heterodox-01.svg" , id: 'heterodox-logo' %>
        <% end %>

        <div class="subtitle hidden">
         <div class="explain">
          <p class="white-bg">
          <span class="latin">hetero </span> <span class="serif"> <%= t("subtitle.other")%> </span> + <span class="latin">doxa</span> <span class="serif">opinion</span></p>
          </div>
          <p class="white-bg"><%=t("subtitle.lign1")%></p><br>
          <p class="white-bg"><%=t("subtitle.lign2_html")%></p>
         </div>

         <div class="hamburger"> <%= inline_svg 'hamburger.svg' , id: 'hamburger'%></div>
         <div class="closing hidden"> <%= inline_svg 'closing.svg' , id: 'closing'%></div>

        </div>
          <div class="nav-items">
          <div><%= link_to t("nav.about") , about_path , class:"bigger" , id:"big-left"%></div>
          <div class="m-projects"><%= link_to t("nav.projects"), projects_path , class:"bigger" %></div>
          <div><%= link_to "contact" , contact_path , class:"bigger" %></div>
          <div>
          <%= link_to "eng" , url_for( :locale => 'en' ) ,class:"bigger" %> | <%= link_to "fr" ,  url_for( :locale => 'fr' ) ,class:"bigger" %> </div>
          </div>

  </div>
  <%= render 'layouts/alerts' %>
    <%= yield %>
    </div>
    <div class="footer"></div>
  </body>
</html>
